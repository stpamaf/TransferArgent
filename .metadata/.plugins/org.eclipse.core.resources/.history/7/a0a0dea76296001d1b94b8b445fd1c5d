			String[] kundeTemp = {String.valueOf(id), kunde.getName(), kunde.getEmail()};
			writer.writeNext(kundeTemp);
			writer.print('\n');
			writer.close();
			
		}catch (Exception e) {
			// TODO: handle exception
		}
		/*String[] kundeTemp = {String.valueOf(id), kunde.getName(), kunde.getEmail()};
		List<String[]> kundeArr = new ArrayList<>();
